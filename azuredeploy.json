{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "maxLength": 3
        }
    },
    "variables": {
        "uniqueString": "[uniqueString(resourceGroup().id, parameters('name'))]",
        "vm.storageprofile.templatename": "[concat('vm.storageprofile.', variables('uniqueString'))]",
        "vm.storageprofile.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.json')]",
        "vm.bootdiagnostics.templatename": "[concat('vm.bootdiagnostics.', variables('uniqueString'))]",
        "vm.bootdiagnostics.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.bootdiagnostics.json')]",
        "vm.hardwareProfile.templatename": "[concat('vm.hardwareProfile.', variables('uniqueString'))]",
        "vm.hardwareProfile.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.hardwareprofile.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.storageprofile.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.storageprofile.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "uniqueString": {
                        "value": "[variables('uniqueString')]"
                    },
                    "vmName": {
                        "value": "vmname"
                    },
                    "location": {
                        "value": "uksouth"
                    },
                    "osImage": {
                        "value": "RHEL 7.3 BYOS 2018-03-21"
                    },
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "role": {
                        "value": "CRM"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.bootdiagnostics.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.bootdiagnostics.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "location": {
                        "value": "uksouth"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.hardwareProfile.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.hardwareProfile.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "role": {
                        "value": "CRM"
                    }
                }
            }
        }
    ],
    "outputs": {
        "storageProfile": {
            "value": "[reference(variables('vm.storageprofile.templatename')).outputs.storageProfile.value]",
            "type": "object"
        },
        "bootDiagnostics": {
            "value": "[reference(variables('vm.bootdiagnostics.templatename')).outputs.bootDiagnostics.value]",
            "type": "object"
        },
        "hardwareProfile": {
            "value": "[reference(variables('vm.hardwareProfile.templatename')).outputs.hardwareProfile.value]",
            "type": "object"
        }
    }
}
