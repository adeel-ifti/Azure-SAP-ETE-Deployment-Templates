{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "maxLength": 3
        }    
    },
    "variables": {
        "uniqueString": "[uniqueString(resourceGroup().id, parameters('name'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat('vm.storageprofile.osdisk.template.', variables('uniqueString'))]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.osdisk.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "vmName": {
                        "value": "VMNAMETEST"
                    },
                    "osImage": {
                        "value": "RHEL 7.3 BYOS 2018-03-21"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat('vm.storageprofile.datadisks.template.', variables('uniqueString'))]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.datadisks.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "vmName": {
                        "value": "VMNAMETEST"
                    },
                    "subscription": {
                        "value": "DevTest"
                    },
                    "role": {
                        "value": "CRM"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat('vm.storageprofile.imagereference.template.', variables('uniqueString'))]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.imagereference.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "location": {
                        "value": "uksouth"
                    },
                    "osImage": {
                        "value": "RHEL 7.3"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat('vm.bootdiagnostics.template.', variables('uniqueString'))]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'vm.bootdiagnostics.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "location": {
                        "value": "uksouth"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat('vm.vmsize.template.', variables('uniqueString'))]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'vm.vmsize.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "role": {
                        "value": "CRM"
                    }
                }
            }
        }

    ],
    "outputs": {
        "uniqueString": {
            "value": "[variables('uniqueString')]",
            "type": "string"
        }
    }
}
