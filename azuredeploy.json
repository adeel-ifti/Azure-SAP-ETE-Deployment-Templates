{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "maxLength": 3
        }    
    },
    "variables": {
        "uniqueString": "[uniqueString(subscription().tenantId, subscription().id, resourceGroup().id, parameters('name'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat('vm.osdisk.template.', variables('uniqueString'))",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'vm.osdisk.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "vmName": {
                        "value": "VMNAMETEST"
                    },
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "location": {
                        "value": "uksouth"
                    },
                    "osImage": {
                        "value": "RHEL 7.3"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat('vm.bootdiagnostics.template.', variables('uniqueString'))",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'vm.bootdiagnostics.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "location": {
                        "value": "uksouth"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
