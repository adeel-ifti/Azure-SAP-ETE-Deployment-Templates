{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "maxLength": 3,
            "minLength": 3,
            "metadata": {
                "description": "Unique deployment number, e.g. 215"
            }
        },
        "subscription": {
            "type": "string",
            "allowedValues": [
                "Dev Test"
            ],
            "defaultValue": "Dev Test",
            "metadata": {
                "description": "Subscription in which to deploy this Virtual Machine"
            }
        },
        "vmOs": {
            "type": "string",
            "allowedValues": [
                "RHEL 7.3 BYOS 2018-03-21",
                "RHEL 7.2",
                "RHEL 7.3",
                "SLES SAP 12-SP1",
                "SLES SAP BYOS 12-SP1",
                "SLES SAP 12-SP2",
                "SLES SAP BYOS 12-SP2",
                "SLES SAP 12-SP3",
                "SLES SAP BYOS 12-SP3",
                "Windows Server 2012 Datacenter",
                "Windows Server 2012 R2 Datacenter",
                "Windows Server 2016 Datacenter",
                "Oracle Linux 7.2"
            ],
            "defaultValue": "RHEL 7.3 BYOS 2018-03-21",
            "metadata": {
                "description": "The Virtual Machine operating system you want to deploy"
            }
        },
        "vmRole": {
            "type": "string",
            "allowedValues": [
                "ISU",
                "CRM",
                "PIC",
                "BWA",
                "MOB",
                "EWM",
                "JVA",
                "CEV",
                "PIN",
                "NGW"
            ],
            "defaultValue": "ISU",
            "metadata": {
                "description": "The Virtual Machine role you want to deploy"
            }
        },
        "vmIpAddresses": {
            "type": "array",
            "minLength": 2,
            "maxLength": 2,
            "defaultValue": [
                "",
                ""
            ],
            "metadata": {
                "description": "The Virtual Machine static IP addresses. If an address is blank, DHCP will be used"
            }
        }
    },
    "variables": {
        "uniqueDeploymentString": "[parameters('name')]",
        "vm.templatename": "[concat('vm.', variables('uniqueDeploymentString'))]",
        "vm.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.json')]",
        "networkinterfaces.templatename": "[concat('networkinterfaces.', variables('uniqueDeploymentString'))]",
        "networkinterfaces.templateuri": "[uri(deployment().properties.templateLink.uri, 'networkinterfaces.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "uniqueDeploymentString": {
                        "value": "[variables('uniqueDeploymentString')]"
                    },
                    "vmName": {
                        "value": "vmname"
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    },
                    "osImage": {
                        "value": "[parameters('vmOs')]"
                    },
                    "subscription": {
                        "value": "[parameters('subscription')]"
                    },
                    "role": {
                        "value": "[parameters('vmRole')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('networkinterfaces.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkinterfaces.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "uniqueDeploymentString": {
                        "value": "[variables('uniqueDeploymentString')]"
                    },
                    "primary": {
                        "value": true
                    },
                    "ipAddresses": {
                        "value": "[parameters('vmIpAddresses')]"
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    },
                    "subscription": {
                        "value": "[parameters('subscription')]"
                    },
                    "role": {
                        "value": "[parameters('vmRole')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
