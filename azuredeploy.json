{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "maxLength": 3
        }
    },
    "variables": {
        "uniqueDeploymentString": "[parameters('name')]",
        "vm.templatename": "[concat('vm.', variables('uniqueDeploymentString'))]",
        "vm.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.json')]",
        "networkinterfaces.templatename": "[concat('networkinterfaces.', variables('uniqueDeploymentString'))]",
        "networkinterfaces.templateuri": "[uri(deployment().properties.templateLink.uri, 'networkinterfaces.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "uniqueDeploymentString": {
                        "value": "[variables('uniqueDeploymentString')]"
                    },
                    "vmName": {
                        "value": "vmname"
                    },
                    "location": {
                        "value": "ukwest"
                    },
                    "osImage": {
                        "value": "RHEL 7.3 BYOS 2018-03-21"
                    },
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "role": {
                        "value": "CRM"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('networkinterfaces.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkinterfaces.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "uniqueDeploymentString": {
                        "value": "[variables('uniqueDeploymentString')]"
                    },
                    "primary": {
                        "value": true
                    },
                    "ipAddresses": {
                        "value": [
                            "",
                            "10.0.0.1"
                        ]
                    },
                    "location": {
                        "value": "ukwest"
                    },
                    "subscription": {
                        "value": "Dev Test"
                    },
                    "role": {
                        "value": "CRM"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
