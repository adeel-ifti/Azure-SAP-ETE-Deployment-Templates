{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueId": {
            "type": "string",
            "maxLength": 3,
            "minLength": 3,
            "metadata": {
                "description": "Unique deployment number, e.g. 215"
            }
        },
        "adminUserName": {
            "type": "string",
            "defaultValue": "azureuser"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "image": {
            "type": "string",
            "allowedValues": [
                "RHEL 7.3 BYOS 2018-03-21",
                "RHEL 7.2",
                "RHEL 7.3",
                "SLES SAP 12-SP1",
                "SLES SAP BYOS 12-SP1",
                "SLES SAP 12-SP2",
                "SLES SAP BYOS 12-SP2",
                "SLES SAP 12-SP3",
                "SLES SAP BYOS 12-SP3",
                "Windows Server 2012 Datacenter",
                "Windows Server 2012 R2 Datacenter",
                "Windows Server 2016 Datacenter",
                "Oracle Linux 7.2"
            ],
            "defaultValue": "RHEL 7.3 BYOS 2018-03-21",
            "metadata": {
                "description": "The Virtual Machine operating system you want to deploy"
            }
        },
        "role": {
            "type": "string",
            "allowedValues": [
                "ISU",
                "CRM",
                "PIC",
                "BWA",
                "MOB",
                "EWM",
                "JVA",
                "CEV",
                "PIN",
                "NGW"
            ],
            "defaultValue": "ISU",
            "metadata": {
                "description": "The Virtual Machine role you want to deploy"
            }
        },
        "vmIpAddresses": {
            "type": "array",
            "minLength": 2,
            "maxLength": 2,
            "defaultValue": [
                "",
                ""
            ],
            "metadata": {
                "description": "The Virtual Machine static IP addresses. If an address is blank, DHCP will be used"
            }
        }
    },
    "variables": {
        "uniqueId": "[parameters('uniqueId')]",
        "azuredeploy.validate.templatename": "[concat('azuredeploy.validate.', variables('uniqueId'))]",
        "azuredeploy.validate.templateuri": "[uri(deployment().properties.templateLink.uri, 'azuredeploy.validate.json')]",
        "vm.templatename": "[concat('vm.', variables('uniqueId'))]",
        "vm.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.json')]",
        "networkinterfaces.templatename": "[concat('networkinterfaces.', variables('uniqueId'))]",
        "networkinterfaces.templateuri": "[uri(deployment().properties.templateLink.uri, 'networkinterfaces.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('azuredeploy.validate.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('azuredeploy.validate.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "uniqueId": {
                        "value": "[parameters('uniqueId')]"
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    },
                    "subscription": {
                        "value": "[subscription().displayName]"
                    },
                    "image": {
                        "value": "[parameters('image')]"
                    },
                    "role": {
                        "value": "[parameters('role')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.templatename')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments/', variables('azuredeploy.validate.templatename'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "params": {
                        "value": "[reference(variables('azuredeploy.validate.templatename')).outputs.params.value]"
                    },
                    "adminUserName": {
                        "value": "[parameters('adminUserName')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('networkinterfaces.templatename')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments/', variables('azuredeploy.validate.templatename'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkinterfaces.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "params": {
                        "value": "[reference(variables('azuredeploy.validate.templatename')).outputs.params.value]"
                    },
                    "primary": {
                        "value": true
                    },
                    "ipAddresses": {
                        "value": "[parameters('vmIpAddresses')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
