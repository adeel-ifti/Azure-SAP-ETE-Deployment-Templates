{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueString": {
            "type": "string"
        },
        "primary": {
            "type": "bool"
        },
        "ipAddresses": {
            "type": "array"
        },
        "location": {
            "type": "string",
            "allowedValues": [
                "ukwest"
            ]
        },
        "subscription": {
            "type": "string",
            "allowedValues": [
                "Dev Test"
            ]
        },
        "role": {
            "type": "string",
            "allowedValues": [
                "ISU",
                "CRM",
                "PIC",
                "BWA",
                "MOB",
                "EWM",
                "JVA",
                "CEV",
                "PIN",
                "NGW"
            ]
        }
    },
    "variables": {
        "networkinterfaces.enableacceleratednetworking.templatename": "[concat('networkinterfaces.enableacceleratednetworking.', parameters('uniqueString'))]",
        "networkinterfaces.enableacceleratednetworking.templateuri": "[uri(deployment().properties.templateLink.uri, 'networkinterfaces.enableacceleratednetworking.json')]",
        "networkinterfaces.dnssettings.templatename": "[concat('networkinterfaces.dnssettings.', parameters('uniqueString'))]",
        "networkinterfaces.dnssettings.templateuri": "[uri(deployment().properties.templateLink.uri, 'networkinterfaces.dnssettings.json')]",
        "networkinterfaces.ipconfigurations.templatename": "[concat('networkinterfaces.ipconfigurations.', parameters('uniqueString'))]",
        "networkinterfaces.ipconfigurations.templateuri": "[uri(deployment().properties.templateLink.uri, 'networkinterfaces.ipconfigurations.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('networkinterfaces.enableacceleratednetworking.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkinterfaces.enableacceleratednetworking.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "[parameters('subscription')]"
                    },
                    "role": {
                        "value": "[parameters('role')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('networkinterfaces.dnssettings.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkinterfaces.dnssettings.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {}
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('networkinterfaces.ipconfigurations.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkinterfaces.ipconfigurations.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "ipAddresses": {
                        "value": "[parameters('ipAddresses')]"
                    },
                    "subscription": {
                        "value": "[parameters('subscription')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "role": {
                        "value": "[parameters('role')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "networkInterfaces": {
            "type": "object",
            "value": {
                "primary": "[parameters('primary')]",
                "enableAcceleratedNetworking": "[reference(variables('networkinterfaces.enableacceleratednetworking.templatename')).outputs.enableAcceleratedNetworking.value]",
                "dnsSettings": "[reference(variables('networkinterfaces.dnssettings.templatename')).outputs.dnsSettings.value]",
                "ipConfigurations": "[reference(variables('networkinterfaces.ipconfigurations.templatename')).outputs.ipConfigurations.value]"
            }
        }
    }
}
