{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "maxLength": 3
        },
        "ipAddressesParam": {
            "type": "array",
            "defaultValue": [
                "192.168.0.1",
                "10.0.0.1"
            ]
        }
    },
    "variables": {
        "uniqueString": "[parameters('name')]",
        "networkinterfaces.templatename": "[concat('networkinterfaces1.', variables('uniqueString'))]",
        "networkinterfaces.templateuri": "[uri(deployment().properties.templateLink.uri, 'networkinterfaces1.json')]",
        "ipAddressesVariable": { "ipAddressObj": "[parameters('ipAddressesParam')]" }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('networkinterfaces.templatename')]",
            "properties": {
                "mode": "Incremental",
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "NoddyParam": "[variables('ipAddressesVariable')]"
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "NoddyParam": {
                            "type": "object"
                        }
                    },
                    "variables": {},
                    "resources": [],
                    "outputs": {}
                }
            }
        }
    ],
    "outputs": {
        "networkInterfaces": {
            "value": "[variables('ipAddressesVariable')]",
            "type": "array"
        }
    }
}
