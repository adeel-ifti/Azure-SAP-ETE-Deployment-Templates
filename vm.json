{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "params": {
            "type": "object"
        },
        "adminUserName": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        }
    },
    "variables": {
        "vm.osprofile.templatename": "[concat('vm.osprofile.', parameters('params').uniqueId)]",
        "vm.osprofile.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.osprofile.json')]",
        "vm.storageprofile.templatename": "[concat('vm.storageprofile.', parameters('params').uniqueId)]",
        "vm.storageprofile.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.json')]",
        "vm.bootdiagnostics.templatename": "[concat('vm.bootdiagnostics.', parameters('params').uniqueId)]",
        "vm.bootdiagnostics.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.bootdiagnostics.json')]",
        "vm.hardwareProfile.templatename": "[concat('vm.hardwareprofile.', parameters('params').uniqueId)]",
        "vm.hardwareProfile.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.hardwareprofile.json')]",
        "vmName": "[concat(parameters('params').prefix, 'sap', parameters('params').uniqueId)]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.osprofile.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.osprofile.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "params": {
                        "value": "[parameters('params')]"
                    },
                    "vmName": {
                        "value": "[variables('vmName')]"
                    },
                    "adminUserName": {
                        "value": "[parameters('adminUserName')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.storageprofile.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.storageprofile.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "params": {
                        "value": "[parameters('params')]"
                    },
                    "vmName": {
                        "value": "[variables('vmName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.bootdiagnostics.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.bootdiagnostics.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "params": {
                        "value": "[parameters('params')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.hardwareProfile.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.hardwareProfile.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "params": {
                        "value": "[parameters('params')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "vm": {
            "type": "object",
            "value": {
                "hardwareProfile": "[reference(variables('vm.hardwareprofile.templatename')).outputs.hardwareProfile.value]",
                "storageProfile": "[reference(variables('vm.storageprofile.templatename')).outputs.storageProfile.value]",
                "bootDiagnostics": "[reference(variables('vm.bootdiagnostics.templatename')).outputs.bootDiagnostics.value]"
            }
        }
    }
}
