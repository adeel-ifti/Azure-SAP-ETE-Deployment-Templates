{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueString": {
            "type": "string"
        },
        "vmName": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "allowedValues": [
                "ukwest"
            ]
        },
        "osImage": {
            "type": "string",
            "allowedValues": [
                "RHEL 7.3 BYOS 2018-03-21",
                "RHEL 7.2",
                "RHEL 7.3",
                "SLES SAP 12-SP1",
                "SLES SAP BYOS 12-SP1",
                "SLES SAP 12-SP2",
                "SLES SAP BYOS 12-SP2",
                "SLES SAP 12-SP3",
                "SLES SAP BYOS 12-SP3",
                "Windows Server 2012 Datacenter",
                "Windows Server 2012 R2 Datacenter",
                "Windows Server 2016 Datacenter",
                "Oracle Linux 7.2"
            ]
        },
        "subscription": {
            "type": "string",
            "allowedValues": [
                "Dev Test"
            ]
        },
        "role": {
            "type": "string",
            "allowedValues": [
                "ISU",
                "CRM",
                "PIC",
                "BWA",
                "MOB",
                "EWM",
                "JVA",
                "CEV",
                "PIN",
                "NGW"
            ]
        }

    },
    "variables": {
        "vm.storageprofile.templatename": "[concat('vm.storageprofile.', parameters('uniqueString'))]",
        "vm.storageprofile.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.json')]",
        "vm.bootdiagnostics.templatename": "[concat('vm.bootdiagnostics.', parameters('uniqueString'))]",
        "vm.bootdiagnostics.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.bootdiagnostics.json')]",
        "vm.hardwareProfile.templatename": "[concat('vm.hardwareProfile.', parameters('uniqueString'))]",
        "vm.hardwareProfile.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.hardwareprofile.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.storageprofile.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.storageprofile.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "uniqueString": {
                        "value": "[parameters('uniqueString')]"
                    },
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "osImage": {
                        "value": "[parameters('osImage')]"
                    },
                    "subscription": {
                        "value": "[parameters('subscription')]"
                    },
                    "role": {
                        "value": "[parameters('role')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.bootdiagnostics.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.bootdiagnostics.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "[parameters('subscription')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.hardwareProfile.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.hardwareProfile.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "[parameters('subscription')]"
                    },
                    "role": {
                        "value": "[parameters('role')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "vm": {
            "type": "object",
            "value": {
                "hardwareProfile": "[reference(variables('vm.hardwareProfile.templatename')).outputs.hardwareProfile.value]",
                "storageProfile": "[reference(variables('vm.storageprofile.templatename')).outputs.storageProfile.value]",
                "bootDiagnostics": "[reference(variables('vm.bootdiagnostics.templatename')).outputs.bootDiagnostics.value]"
            }
        }
    }
}
