{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueId": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "allowedValues": [
                "ukwest"
            ]
        },
        "subscription": {
            "type": "string",
            "allowedValues": [
                "SAP Dev Test"
            ]
        },
        "image": {
            "type": "string",
            "allowedValues": [
                "RHEL 7.3 BYOS 2018-03-21",
                "RHEL 7.2",
                "RHEL 7.3",
                "SLES SAP 12-SP1",
                "SLES SAP BYOS 12-SP1",
                "SLES SAP 12-SP2",
                "SLES SAP BYOS 12-SP2",
                "SLES SAP 12-SP3",
                "SLES SAP BYOS 12-SP3",
                "Windows Server 2012 Datacenter",
                "Windows Server 2012 R2 Datacenter",
                "Windows Server 2016 Datacenter",
                "Oracle Linux 7.2"
            ]
        },
        "role": {
            "type": "string",
            "allowedValues": [
                "ISU",
                "CRM",
                "PIC",
                "BWA",
                "MOB",
                "EWM",
                "JVA",
                "CEV",
                "PIN",
                "NGW"
            ]
        }
    },
    "variables": {
        "subscriptionPrefix": {
            "SAP Dev Test": "d"
        },
        "locationPrefix": {
            "ukwest":  "wu"
        },
        "roleNumber": {
            "PIC": "0",
            "CEV": "1",
            "ISU": "2",
            "CRM": "3",
            "BWA": "4",
            "MOB": "5",
            "EWM": "6",
            "JVA": "7",
            "NGW": "8",
            "PIN": "9"
        }
    },
    "resources": [],
    "outputs": {
        "params": {
            "type": "object",
            "value": {
                "uniqueId": "[toLower(concat(parameters('uniqueId'), variables('roleNumber')[parameters('role')]))]",
                "prefix": "[concat('az', variables('locationPrefix')[parameters('location')], '-', variables('subscriptionPrefix')[parameters('subscription')], '-')]",
                "location": "[parameters('location')]",
                "subscription": "[parameters('subscription')]",
                "image": "[parameters('image')]",
                "role": "[parameters('role')]"
            }
        }
    }
}
