{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "params": {
            "type": "object"
        }
    },
    "variables": {
        "uniqueId": "[parameters('params').uniqueId]",
        "prefix": "[parameters('params').prefix]",
        "location": "[parameters('params').location]",
        "subscription": "[parameters('params').subscription]",
        "image": "[parameters('params').image]",
        "role": "[parameters('params').role]",
        "vmSize": {
            "SAP Dev Test": {
                "ISU": "Standard_E4s_v3",
                "CRM": "Standard_E4s_v3",
                "PIC": "Standard_D4s_v3",
                "BWA": "Standard_D4s_v3",
                "MOB": "Standard_E2s_v3",
                "EWM": "Standard_E2s_v3",
                "JVA": "Standard_E2s_v3",
                "CEV": "Standard_E2s_v3",
                "PIN": "Standard_E2s_v3",
                "NGW": "Standard_E2s_v3"
            }
        },
        "hardwareProfile": {
            "vmSize": "[variables('vmSize')[variables('subscription')][variables('role')]]"
        }
    },
    "resources": [],
    "outputs": {
        "hardwareProfile": {
            "value": "[variables('hardwareProfile')]",
            "type": "object"
        }
    }
}
