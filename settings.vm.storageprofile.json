{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "params": {
            "type": "object"
        }
    },
    "variables": {
        "vm.storageprofile.osdisk.templatename": "[concat('vm.storageprofile.osdisk.', parameters('params').uniqueDeploymentId)]",
        "vm.storageprofile.osdisk.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.osdisk.json')]",
        "vm.storageprofile.datadisks.templatename": "[concat('vm.storageprofile.datadisks.', parameters('params').uniqueDeploymentId)]",
        "vm.storageprofile.datadisks.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.datadisks.json')]",
        "vm.storageprofile.imagereference.templatename": "[concat('vm.storageprofile.imagereference.', parameters('params').uniqueDeploymentId)]",
        "vm.storageprofile.imagereference.templateuri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.imagereference.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.storageprofile.osdisk.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.storageprofile.osdisk.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "params": {
                        "value": "[parameters('params')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.storageprofile.datadisks.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.storageprofile.datadisks.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "params": {
                        "value": "[parameters('params')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.storageprofile.imagereference.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.storageprofile.imagereference.templateuri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "params": {
                        "value": "[parameters('params')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "storageProfile": {
            "type": "object",
            "value": {
                "imageReference": "[reference(variables('vm.storageprofile.imagereference.templatename')).outputs.imageReference.value]",
                "osDisk": "[reference(variables('vm.storageprofile.osdisk.templatename')).outputs.osDisk.value]",
                "dataDisks": "[reference(variables('vm.storageprofile.datadisks.templatename')).outputs.dataDisks.value]"
            }
        }
    }
}
