                        },
                        {
                            "size": 127
                        },
                        {
                            "size": 31
                        },
                        {
                            "size": 63
                        }
                    ]
                }
            }
        },
        "dataDisksObj": {
            "copy": [
                {
                    "name": "dataDisks",
                    "count": "[length(variables('diskSizes')[parameters('subscription')][parameters('role')].disks)]",
                    "input": {
                        "lun": "[copyIndex('dataDisks')]",
                        "createOption": "Empty",
                        "name": "[concat(parameters('vmName'),'-datadisk-',padLeft(copyIndex('dataDisks'),2,'0'))]",
                        "size": "[variables('diskSizes')[parameters('subscription')][parameters('role')].disks[copyIndex('dataDisks')].size]"
                    }
                }
            ]
        }
    },
    "resources": [],
    "outputs": {
        "dataDisks": {
            "value": "[variables('dataDisksObj')[string('dataDisks')]]",
            "type": "array"
        }
    }
}
