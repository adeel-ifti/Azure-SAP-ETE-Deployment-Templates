{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "subscription": {
            "type": "string",
            "allowedValues": [
                "Dev Test"
            ]
        },
        "role": {
            "type": "string",
            "allowedValues": [
                "ISU",
                "CRM",
                "PIC",
                "BWA",
                "MOB",
                "EWM",
                "JVA",
                "CEV",
                "PIN",
                "NGW"
            ]
        }
    },
    "variables": {
        "diskSizes": {
            "Dev Test": {
                "ISU": {
                    "disks": [
                        {
                            "size": 63
                        },
                        {
