                        }
                    ]
                },
                "PIC": {
                    "disks": [
                        {
                            "size": 63
                        },
                        {
                            "size": 511
                        },
                        {
                            "size": 31
                        },
                        {
                            "size": 63
                        }
                    ]
                },
                "BWA": {
                    "disks": [
                        {
                            "size": 63
                        },
                        {
                            "size": 511
                        },
                        {
                            "size": 31
                        },
                        {
                            "size": 63
                        }
                    ]
                },
                "MOB": {
                    "disks": [
                        {
                            "size": 63
                        },
                        {
                            "size": 63
                        },
                        {
                            "size": 31
                        },
                        {
                            "size": 63
                        }
                    ]
                },
                "EWM": {
                    "disks": [
                        {
                            "size": 63
                        },
                        {
                            "size": 127
                        },
                        {
                            "size": 31
                        },
                        {
                            "size": 63
