{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueString": {
            "type": "string"
        },
        "vmName": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "allowedValues": [
                "uksouth",
                "ukwest"
            ]
        },
        "osImage": {
            "type": "string",
            "allowedValues": [
                "RHEL 7.3 BYOS 2018-03-21",
                "RHEL 7.2",
                "RHEL 7.3",
                "SLES SAP 12-SP1",
                "SLES SAP BYOS 12-SP1",
                "SLES SAP 12-SP2",
                "SLES SAP BYOS 12-SP2",
                "SLES SAP 12-SP3",
                "SLES SAP BYOS 12-SP3",
                "Windows Server 2012 Datacenter",
                "Windows Server 2012 R2 Datacenter",
                "Windows Server 2016 Datacenter",
                "Oracle Linux 7.2"
            ]
        },
        "subscription": {
            "type": "string",
            "allowedValues": [
                "Dev Test",
                "Pre-Production",
                "Production"
            ]
        },
        "role": {
            "type": "string",
            "allowedValues": [
                "ISU",
                "CRM",
                "PIC",
                "BWA",
                "MOB",
                "EWM",
                "JVA",
                "CEV",
                "PIN",
                "NGW"
            ]
        }
    },
    "variables": {
        "vm.storageprofile.osdisk.templatename": "[concat('vm.storageprofile.osdisk.', parameters('uniqueString'))]",
        "vm.storageprofile.osdisk.uri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.osdisk.json')]",
        "vm.storageprofile.datadisks.templatename": "[concat('vm.storageprofile.datadisks.', parameters('uniqueString'))]",
        "vm.storageprofile.datadisks.uri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.datadisks.json')]",
        "vm.storageprofile.imagereference.templatename": "[concat('vm.storageprofile.imagereference.', parameters('uniqueString'))]",
        "vm.storageprofile.imagereference.uri": "[uri(deployment().properties.templateLink.uri, 'vm.storageprofile.imagereference.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.storageprofile.osdisk.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.storageprofile.osdisk.uri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "osImage": {
                        "value": "[parameters('osImage')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.storageprofile.datadisks.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.storageprofile.datadisks.uri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "subscription": {
                        "value": "[parameters('subscription')]"
                    },
                    "role": {
                        "value": "[parameters('role')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('vm.storageprofile.imagereference.templatename')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vm.storageprofile.imagereference.uri')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                },
                "parameters": {
                    "subscription": {
                        "value": "[parameters('subscription')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "osImage": {
                        "value": "[parameters('osImage')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "osDisk": {
            "value": "[reference(variables('vm.storageprofile.osdisk.templatename')).outputs.osDisk]",
            "type": "object"
        },
        "dataDisks": {
            "value": "[reference(variables('vm.storageprofile.datadisks.templatename')).outputs.dataDisks]",
            "type": "object"
        },
        "imageReference": {
            "value": "[reference(variables('vm.storageprofile.imagereference.templatename')).outputs.imageReference]",
            "type": "object"
        }
    }
}
